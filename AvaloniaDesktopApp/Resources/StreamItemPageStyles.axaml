<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
  <Style Selector="StackPanel.infoBar">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Margin" Value="20 0 20 20"/>
    <Setter Property="Spacing" Value="20"/>
  </Style>

  <Style Selector="StackPanel.infoBar > Label">
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="StackPanel.infoBar > StackPanel > Label">
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="StackPanel.infoBar > StackPanel > Image">
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.MovieDescription">
    <Setter Property="FontSize" Value="16"/>
  </Style>

  <Style Selector="Button.playBtn">
    <Setter Property="CornerRadius" Value="10"/>
  </Style>

  <Style Selector="Button.playBtn:pointerover">
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <Style Selector="Button.playBtn > StackPanel">
    <Setter Property="Margin" Value="5"/>
    <Setter Property="Spacing" Value="5"/>
  </Style>

  <Style Selector="Button.playBtn > StackPanel > Label">
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="Button.playBtn > StackPanel > Image">
    <Setter Property="Height" Value="30"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
</Styles>
