<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:vm="using:AvaloniaDesktopApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:AvaloniaDesktopApp.Controls"
             xmlns:converters="clr-namespace:AvaloniaDesktopApp.Converters"
             x:DataType="vm:MediaMenuViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaDesktopApp.Controls.MediaMenuControl">
    <UserControl.Resources>
        <converters:StringToBitmapConverter x:Key="StringToBitmapConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0" 
               Source="/Assets/avalonia-logo.ico" 
               MaxHeight="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Spacing="10" VerticalAlignment="Center">
            <Button Command="{Binding ShowSearchCommand}">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Search"/>
                </StackPanel>
            </Button>
            <Button Content="Movies" Command="{Binding ShowMoviesCommand}"/>
            <Button Content="Series" Command="{Binding ShowSeriesCommand}"/>
            <Button Content="Settings" Command="{Binding ShowSettingsCommand}"/>
        </StackPanel>

        <Label Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Left"
               Content="{Binding CurrentHeader}" FontWeight="Bold" FontSize="24"/>
        
        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding CurrentControl}"/>
        <!--<controls:MovieContentControl Grid.Row="1" Grid.Column="2"/>-->
        
    </Grid>
</UserControl>
