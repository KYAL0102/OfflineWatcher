<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:vm="using:AvaloniaDesktopApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:AvaloniaDesktopApp.Controls"
             xmlns:converters="clr-namespace:AvaloniaDesktopApp.Converters"
             x:DataType="vm:MediaMenuViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaDesktopApp.Controls.MediaMenuControl">
    <UserControl.Styles>
        <StyleInclude Source="avares://AvaloniaDesktopApp/Resources/NavigationBarStyles.axaml"/>
    </UserControl.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0" 
               Source="/Assets/logo.png" 
               MaxHeight="40" MaxWidth="40" Margin="20 10"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Spacing="10" VerticalAlignment="Center">
            <Button Classes="navBtn" Command="{Binding ShowSearchCommand}">
                <StackPanel Orientation="Vertical">
                    <Border>
                        <Border.OpacityMask>
                            <ImageBrush Source="../Assets/Images/search.png"/>
                        </Border.OpacityMask>
                    </Border>
                    <TextBlock Text="Search"/>
                </StackPanel>
            </Button>
            <Button Classes="navBtn" Command="{Binding ShowMoviesCommand}">
                <StackPanel Orientation="Vertical">
                    <Border>
                        <Border.OpacityMask>
                            <ImageBrush Source="../Assets/Images/movieroll.png"/>
                        </Border.OpacityMask>
                    </Border>
                    <TextBlock Text="Movies"/>
                </StackPanel>
            </Button>
            <Button Classes="navBtn" Command="{Binding ShowSeriesCommand}">
                <StackPanel Orientation="Vertical">
                    <Border>
                        <Border.OpacityMask>
                            <ImageBrush Source="../Assets/Images/series.png"/>
                        </Border.OpacityMask>
                    </Border>
                    <TextBlock Text="Series"/>
                </StackPanel>
            </Button>
            <Button Classes="navBtn" Command="{Binding ShowSettingsCommand}">
                <StackPanel Orientation="Vertical">
                    <Border>
                        <Border.OpacityMask>
                            <ImageBrush Source="../Assets/Images/settings.png"/>
                        </Border.OpacityMask>
                    </Border>
                    <TextBlock Text="Settings"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Label Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"
               Content="{Binding CurrentHeader}" FontWeight="Bold" FontSize="24"/>
        
        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding CurrentControl}"/>
        <!--<controls:MovieContentControl Grid.Row="1" Grid.Column="2"/>-->
        
    </Grid>
</UserControl>
