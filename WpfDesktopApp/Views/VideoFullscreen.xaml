<UserControl x:Class="WpfDesktopApp.Views.VideoFullscreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfDesktopApp.Views"
             xmlns:viewModels="clr-namespace:WpfDesktopApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:VideoFullscreenViewModel}"
             xmlns:controls="clr-namespace:WpfDesktopApp.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <controls:VideoPlayer VideoSource="{Binding VideoFilePath}"/>
</UserControl>
